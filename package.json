{
  "name": "browserify-seed",
  "version": "0.2.2",
  "description": "seed for a browserified version of famous",
  "main": "src/index.js",
  "scripts": {
    "clean": "rm public/bundle.js",
    "test": "npm run lint -s && npm run build",
    "build": "browserify src/index.js -t cssify -t brfs -o public/bundle.js",
    "watch": "watchify src/index.js -t cssify -t brfs -o public/bundle.js --debug --verbose",
    "lint-eslint": "eslint src/",
    "lint-jscs": "jscs src/",
    "lint": "npm run lint-eslint && npm run lint-jscs"
  },
  "devDependencies": {
    "eslint": "^0.7.4",
    "jscs": "^1.5.8"
  },
  "author": "TheAlphaNerd",
  "license": "ISC",
  "dependencies": {
    "brfs": "^1.1.1",
    "browserify": "^5.9.1",
    "cssify": "^0.5.1",
    "famous": "^0.2.2",
    "famous-polyfills": "^0.2.2",
    "forever": "^0.11.1",
    "hapi": "^6.5.1",
    "watchify": "^1.0.1"
  }
}
